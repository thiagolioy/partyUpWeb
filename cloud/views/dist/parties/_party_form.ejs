<form><% if(party) { %><div class="row"><div class="large-6 medium-6 small-12 columns hide"><input id="party-to-update-id" type="text" class="hide" value="<%=party.id%>"></div></div><%}%><div class="row"><div class="large-6 medium-6 small-12 columns"><select id="select-city"><option value="<%= party ? party.get('place').get('city') : '' %>"><%= party ? party.get('place').get('city') : 'Escolha a Cidade' %></option><% cities.forEach(function(city) { %><option value="<%=city%>"><%= city %></option><% }) %></select></div><div class="large-6 medium-6 small-12 columns"><select id="select-place"><option value="<%= party ? party.get('place').id : '' %>"><%= party ? party.get('place').get('name') : 'Escolha a Lugar' %></option><% if(party) { %><% places.forEach(function(place) { %><option value="<%= place.id %>"><%= place.get('name') %></option><% }) %><%}%></select></div></div><div class="row"><div class="large-6 medium-6 small-12 columns"><input id="name" type="text" placeholder="Nome" value="<%= party ? party.get('name') : '' %>"></div><div class="large-6 medium-6 small-12 columns"><div class="row collapse"><div class="large-8 medium-8 small-8 columns"><input type="text" class="span2" placeholder="Data - dd/mm/yyyy" id="datepicker" value="<%= party ? moment(party.get('date')).format('DD/MM/YYYY') : '' %>" data-date-format="dd/mm/yyyy"></div><div class="large-4 medium-4 small-4 columns"><input type="text" class="span2" placeholder="Hora - HH:mm" id="hour" value="<%= party ? moment(party.get('date')).format('HH:mm') : '' %>" data-date-format="HH:mm"></div></div></div></div><div class="row"><div class="large-6 medium-6 small-12 columns"><input id="male-price" type="text" placeholder="Preço Masculino" value="<%= party ? party.get('malePrice') : '' %>"></div><div class="large-6 medium-6 small-12 columns"><input id="female-price" type="text" placeholder="Preço Feminino" value="<%= party ? party.get('femalePrice') : '' %>"></div></div><div class="row"><% include ../commons/_image_uploader %><div class="large-6 medium-6 small-12 columns"><select id="select-party-list-type"><option value="<%= party ? party.get('sendNamesType') : '' %>"><%= party ? party.get('sendNamesType') : 'Escolha o tipo de lista' %></option><option value="facebook">facebook</option><option value="mail">mail</option><option value="whatsapp">whatsapp</option><option value="none">none</option></select></div></div><div class="row"><div class="large-6 medium-6 small-12 columns"><input id="send-names-to-event-list-id" value="<%= party ? party.get('sendNamesTo') : '' %>" type="text" placeholder="Names to event list"></div></div><div class="row"><div class="large-12 medium-12 small-12 columns"><textarea rows="10" cols="50" id="description" placeholder="Descrição">
						<%= party ? party.get('description') : '' %>
					</textarea></div></div><div class="row"><div class="large-12 medium-12 small-12 columns"><% if(party) { %><a href="#" class="button postfix default" id="update-party-btn">Atualizar</a><%} else {%> <a href="#" class="button postfix default" id="create-party-btn">Salvar</a><%}%></div></div></form>